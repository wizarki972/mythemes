#!/bin/bash

# I have a custom patch for rofi that adds categories for drun 
# appliactions you can click and select games, utils, etc.
# if you want those, take a look here: https://github.com/cebem1nt/rofi/releases/tag/patch
#
# And replace with this one
#
# rofi -theme ~/.config/rofi/themes/launcher.rasi \
#      -show drun \
#      -modi "drun,drun-utils,drun-games,drun-network,drun-media" \
#      -drun-exclude-categories "Game" \
#      -display-drun "" \
#      -display-drun-games "󰊴" \
#      -display-drun-utils "" \
#      -display-drun-network "󰭹" \
#      -display-drun-media "󰲍" \

rofi -theme ~/.config/rofi/themes/launcher.rasi \
     -show drun \
     -modi "drun,run,filebrowser" \
     -display-drun "" \
     -display-run "" \
     -display-filebrowser "󰉋"